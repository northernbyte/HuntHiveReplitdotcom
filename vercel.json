{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "dist/index.js": {
      "runtime": "@vercel/node@18.x"
    }
  },
  "crons": [
    {
      "path": "/api/cron/review-products",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/discover-products",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/update-prices",
      "schedule": "0 4 * * *"
    }
  ]
}
